{
  "name": "stallion-cli",
  "version": "1.0.2",
  "description": "A powerful CLI tool for managing your Stallion deployments",
  "main": "index.js",
  "bin": {
    "stallion": "index.js"
  },
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "prep-release": "node scripts/prep-release.js",
    "pre-release-patch": "npm version prerelease --preid=alpha -f",
    "prepare-release": "npm run build && npm run prep-release",
    "prepare-release-dev": "pnpm run build && cross-env NODE_ENV=development pnpm run prep-release"
  },
  "keywords": [
    "cli",
    "stallion",
    "typescript",
    "commander"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.9.0",
    "chalk": "^4.1.2",
    "commander": "^13.1.0",
    "figlet": "^1.7.0",
    "gradient-string": "^2.0.2",
    "inquirer": "^12.6.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mime": "^3.0.0",
    "opener": "^1.5.2",
    "ora": "^5.4.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@types/archiver": "^6.0.3",
    "@types/chalk": "^2.2.4",
    "@types/figlet": "^1.5.8",
    "@types/gradient-string": "^1.1.6",
    "@types/inquirer": "^9.0.8",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.15.17",
    "@types/opener": "^1.4.3",
    "@types/semver": "^7.7.0",
    "cross-env": "^7.0.3",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "semantic-release": "19.0.3",
    "typescript": "^5.8.3"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "stallion-package"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}"
        }
      ]
    ]
  }
}
